<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tanghe.garben.capitalbooze.OrderFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalLayoutTotalPrice"
        android:elevation="2dp"
        android:layout_gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:id="@+id/totalPrice"
            android:textSize="24dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:id="@+id/mTotalPrice"
            android:textSize="24dp"
            android:layout_margin="2dp"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="(0.00)"
            android:id="@+id/mTotalPriceLast"
            android:textSize="24dp"
            android:layout_margin="2dp"
            android:layout_gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalLayoutTotalSquares">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:id="@+id/totalSquares"
            android:textSize="24dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="#0"
            android:id="@+id/mTotalSquares"
            android:textSize="24dp"
            android:layout_gravity="right"
            android:layout_margin="2dp" />

        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="(#0)"
            android:id="@+id/mTotalSquaresLast"
            android:textSize="24dp"
            android:layout_gravity="right"
            android:layout_margin="2dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_gravity="right"
        android:layout_margin="2dp" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/verticalLayoutOrders"></LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false" >

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_back"
            android:text="@string/nav_back" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order"
            android:layout_gravity="center_horizontal"
            android:text="@string/order"
            android:singleLine="false" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_next"
            android:text="@string/nav_next" />
    </LinearLayout>

</LinearLayout>