<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tanghe.garben.capitalbooze.OrderFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalLayoutTotalPrice"
        android:layout_gravity="right">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/total"
            android:id="@+id/totalPrice"
            android:textSize="24sp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:id="@+id/mTotalPrice"
            android:textSize="24sp"
            android:layout_margin="2dp"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:id="@+id/mTotalPriceLast"
            android:textSize="24sp"
            android:layout_margin="2dp"
            android:layout_gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalLayoutTotalSquares">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/total"
            android:id="@+id/totalSquares"
            android:textSize="24sp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:id="@+id/mTotalSquares"
            android:textSize="24sp"
            android:layout_gravity="right"
            android:layout_margin="2dp" />

        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:id="@+id/mTotalSquaresLast"
            android:textSize="24sp"
            android:layout_gravity="right"
            android:layout_margin="2dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalLayoutTotalCount">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/totalCount"
            android:textSize="24sp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:id="@+id/mTotalCount"
            android:textSize="24sp"
            android:layout_gravity="right"
            android:layout_margin="2dp" />

        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:id="@+id/mTotalCountLast"
            android:textSize="24sp"
            android:layout_gravity="right"
            android:layout_margin="2dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/scrollView"
        android:layout_gravity="right"
        android:layout_margin="2dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/verticalLayoutOrders" />
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_back"
            android:text="@string/nav_back" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:ignore="UselessLeaf"/>

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order"
            android:layout_gravity="center_horizontal"
            android:text="@string/order" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:ignore="UselessLeaf"/>

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_next"
            android:text="@string/nav_next" />
    </LinearLayout>

</LinearLayout>